<div class="container mt-5">
    <% if (error) { %>
        <div class="alert alert-danger text-center animate__animated animate__fadeIn">
            <%= error %>
        </div>
        <% } %>

            <!-- Welcome Section -->
            <div class="text-center mb-5">
                <h1 class="animate__animated animate__fadeInDown"
                    style="color: var(--primary-color); font-weight: bold;">
                    Welcome, <%= user.name %>!
                </h1>
                <p class="text-muted animate__animated animate__fadeIn" style="font-size: 1.2rem;">
                    Easily upload and manage your health records below.
                </p>
            </div>

            <!-- Drag and Drop Upload Section -->
            <form action="/dashboard/upload" method="POST" enctype="multipart/form-data">
                <div class="upload-section rounded-lg shadow p-5 animate__animated animate__fadeInUp">
                    <div class="text-center">
                        <h3 class="mb-4" style="color: var(--accent-color); font-weight: 600;">Upload Your Documents
                        </h3>
                        <p class="text-muted mb-4" style="font-size: 1rem;">
                            Drag and drop files here or click the button below to upload.
                        </p>
                        <div id="dropzone"
                            class="dropzone rounded p-4 d-flex justify-content-center align-items-center mb-4">
                            <p class="text-muted m-0">Drag & Drop Files Here</p>
                        </div>
                        <input type="file" name="document" id="document" class="form-control-file mb-3"
                            accept=".jpg,.jpeg,.png,.pdf" required>
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            Upload Files
                        </button>
                    </div>
                </div>
            </form>
</div>