<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="animate__animated animate__fadeInDown">Welcome, <%= user.name %>!</h1>
        <p class="text-muted animate__animated animate__fadeIn">Easily upload and manage your health records below.</p>
    </div>

    <!-- Drag and Drop Upload Section -->
    <div class="upload-section shadow-lg p-5 animate__animated animate__fadeInUp">
        <div class="text-center">
            <h3 class="mb-3">Upload Your Documents</h3>
            <p class="text-muted">Drag and drop files here or click the button below to upload.</p>
            <div id="dropzone" class="dropzone my-4">
                <p class="text-muted">Drag & Drop Files Here</p>
            </div>
            <button class="btn btn-primary btn-lg" id="uploadButton">Upload Files</button>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<!-- Custom JS -->
<script>
    // JavaScript for drag and drop functionality
    const dropzone = document.getElementById('dropzone');

    dropzone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropzone.classList.add('drag-over');
    });

    dropzone.addEventListener('dragleave', () => {
        dropzone.classList.remove('drag-over');
    });

    dropzone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropzone.classList.remove('drag-over');
        const files = e.dataTransfer.files;
        alert(`${files.length} file(s) uploaded.`);
    });

    document.getElementById('uploadButton').addEventListener('click', () => {
        alert('Upload button clicked!');
    });
</script>